/**app.wxss**/
@import "pages/utils/iconfont.wxss";

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f0f4f3;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.container.withtab {
  margin: 105rpx 0 0 0;
}

.flex-wrp {
  display: flex;
}

.flex-tab {
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: stretch;
}

.flex-item {
  flex-grow: 1;
  text-align: center;
}

.top-tab {
  width: 750rpx;
  height: 100rpx;
  background: #298de5;
  color: #8ccefd;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.toptab.active {
  color: #fff;
  border-bottom: solid 2px #fff;
}

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 34rpx;
  transform: translateY(-50%);
  transition: 0.3s;
}

.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}

.navigator {
  padding: 5rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #d8d8d8;
}

.navigator:first-child:before {
  display: none;
}

.navigator-text {
  flex: 1;
  font-size: 16px;
  padding-right: 20px;
  padding-left:15px;
  color:#4D4D4D;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}

.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.lineView {
  margin: 0 auto;
  width: 100%;
  height: 2rpx;
  background-color: #F0F0F0;
}

.pickView {
  width: 100%;
  height: 35px;
  margin-left: 22px;
  margin-top: 10px;
}

.pickLable {
  font-size: 16px;
  float: left;
}

.pickValue {
  font-size: 16px;
  float: right;
  margin-right:65px;
}


.radio {
  height: 45px;
  margin-left: 20px;
}

.radioLable {
  font-size: 16px;
  margin-top: 10px;
  float: left;
}

.radioView {
  float: right;
  margin-top: 10px;
  margin-right: 30px;
}

.labelMan {
  font-size: 16px;
  margin-right: 15px;
  color: #4d4d4d;
}

.labelWoman {
  font-size: 16px;
  color: #4d4d4d;
}

#radioMan {
  margin-bottom: 10px;
}

#radioWoMan {
  margin-bottom: 10px;
}

.pickData {
  float: left;
}

.arrow {
  width: 10px;
  height: 10px;
  border-top: 1.2px solid #999;
  border-right: 1.2px solid #999;
  position: absolute;
  right: 28px;
  transform: rotate(45deg);
  margin-top: 17rpx;
}

.inputView {
  padding-top: 10px;
  width: 100%;
  height: 50px;
  border-bottom: 1px solid #00ff00;
}

.inputValueView {
  font-size: 16px;
  line-height: 50px;
  height: 50px;
  padding-left: 10px;
  padding-top:7px;
}


.btnView {
  margin-top: 100px;
  margin-left: 20px;
  margin-right: 20px;
}

.primary{
  color:#FFFFFF;
background-color:#0099ff;

}