.userHead {
  width: 110rpx;
  height: 110rpx;
  border-radius: 200px;
  margin-top: 8px;
  margin-left: 8px;
}

.headPhotoView {
  float: left;
  height: 100%;
}

.centerView {
  float: left;
  margin-top: 12px;
  margin-left: 8px;
}

.chatArea {
  height: 70px;
  width: 100%;
}

.chatContainer {
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: white;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.chatLineView {
  margin: 0 auto;
  width: 100%;
  height: 1.5rpx;
  background-color: #e5e5e5;
}

.dispalyNameTxt {
  font-size: 16px;
}

.rightView {
  float: right;
  margin-top: 8px;
  margin-right: 8px;
}

.chatContentTxt {
  font-size: 14px;
  margin-top: 3px;
  color: #8e8e8e;
}

.chatTime {
  font-size: 13px;
  margin-top: 5px;
  color: #8e8e8e;
}

.unreadCount {
  font-size: 13px;
  width: 25px;
  height: 25px;
  background-color: red;
  border-radius: 100%;
  text-align: center;
  color: white;
  font-weight: 600;
  line-height: 25px;
  margin-left: 25px;
  margin-top: 3px;
}

.chatTime {
  font-size: 12px;
}
