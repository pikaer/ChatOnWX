/* pages/coindetail/coindetail.wxss */
.coinInfo {
  display: flex;
  align-items: center;
  margin-top: 60rpx;
  justify-content:center;
}
.coinText {
  margin-left: 20rpx;
}

.btnContainer {
  display:flex;
  margin-top:40rpx;
  margin-bottom: 25rpx;
  justify-content:center;  
}
button{
  border: 2rpx solid dodgerblue;  
  border-radius: 0;
}
button::after{
    border-radius: 0;
}
.btnAll {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
}
.btnAll_click {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  color:white;
  line-height: 55rpx;
  font-size: 28rpx;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  background-color: dodgerblue;
}
.btnIncome {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  border-style:solid none;
}
.btnIncome_click {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  color:white;
  line-height: 55rpx;
  font-size: 28rpx;
  border-style:solid none;
  background-color: dodgerblue;
}
.btnExpend {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  line-height: 55rpx;
  font-size: 28rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}
.btnExpend_click {
  margin: 0rpx;
  width:180rpx;
  height:60rpx;
  color:white;
  line-height: 55rpx;
  font-size: 28rpx;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  background-color: dodgerblue;
}

.transactionName {
  float: left;
  font-size: 30rpx;
  margin-top: 10rpx;
  margin-left: 100rpx;
}
.moneyCountExpend {  
  position: relative;
  top:30rpx;
  float: right;
  color:coral;
  font-size: 26rpx;
  margin-right: 60rpx;
}
.moneyCountIncome {  
  position: relative;
  top:30rpx;
  float: right;
  color:dodgerblue;
  font-size: 26rpx;
  margin-right: 60rpx;
}
.timeStamp {
  clear: left;
  float: left;
  color: gray;
  font-size: 26rpx;
  margin-left: 100rpx;
  margin-bottom: 10rpx;
}
.lineView {
  clear: left;
}

