.indexContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #f0f4f3;
  padding: 0;
  font-size: 14rpx;
  color: #000;
}

.tabView {
  width: 100%;
  height: 40px;
  background-color: white;
  display: flex;
  align-items: center;
  text-align: center;
  position: fixed;
}

.tabCheckedView {
  flex-grow: 1;
  font-size: 37rpx;
  color: #4d4d4d;
  height: 30px;
  border-bottom: 2px solid #09f;
  padding-top: 7px;
}

.tabUnCheckedView {
  flex-grow: 1;
  font-size: 37rpx;
  color: #4d4d4d;
}

.contentView {
  padding-top: 40px;
  width: 100%;
  background-color: red;
}

.contentArea {
  margin-bottom: 7px;
  background-color: white;
  clear: both;
  width: 100%;
}

.userHead {
  width: 48px;
  height: 48px;
  border-radius: 100%;
  margin-top: 10px;
  margin-left: 8px;
}

.titleView {
  width: 100%;
}

.leftView {
  float: left;
}

.centerView {
  float: left;
  margin-top: 10px;
  margin-left: 8px;
}

.rightView {
  float: right;
  margin-right:7px;
}

.nickNameView {
  font-size: 16px;
}

.timeView {
  font-size: 11px;
}

.bodyView {
  clear: both;
}

.footerView {
  clear: both;
}

.supportView {
  float: left;
  margin-left: 80px;
}

.commentView {
  float: right;
  margin-right: 80px;
}

.textView {
  font-size: 14px;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 8px;
  margin-right: 8px;
}

.supportTxt {
  float: left;
  font-size: 12px;
  margin-top: 8px;
  margin-left: 8px;
}

.commentTxt {
  float: left;
  font-size: 12px;
  margin-top: 8px;
  margin-left: 8px;
}
